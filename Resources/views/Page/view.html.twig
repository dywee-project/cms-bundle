{# Dywee\CMSBundle\Resources\View\CMS\view.html.twig #}

{% if page.template != '' %}
    {% set pageTemplate = 'DyweeCMSBundle:Templates:' ~ page.template ~ '.html.twig' %}
{% else %}
    {% set pageTemplate = 'DyweeCMSBundle:Templates:default.html.twig' %}
{% endif %}

{% extends pageTemplate %}

{% block metaTitle %}
    {{ page.metaTitle }} {{ parent() }}
{% endblock %}

{% block metaDescription %}
    {{ page.metaDescription }}
{% endblock %}

{% block metaKeywords %}
    {{ page.metaKeywords }}
{% endblock %}
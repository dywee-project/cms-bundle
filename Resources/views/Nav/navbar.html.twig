<nav class="navbar navbar-default">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#dywee-navbar-collapse" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            {% if websiteName is defined and websiteName is not null %}
                <div class="logo">
                    <a class="navbar-brand brand" href="{{ path('cms_homepage') }}">{{ websiteName }}</a>
                </div>
            {% endif %}
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="dywee-navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                {% for page in pageList %}
                    {% if page.children is empty %}
                        {% if page.type == 1 %}
                            <li><a href="{{ path('cms_homepage') }}">{{ page.menuName }}</a></li>
                        {% else %}
                            <li><a href="{{ path('cms_view', {data: page.url}) }}">{{ page.menuName }}</a></li>
                        {% endif %}
                    {% else %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ page.menuName }} <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                {% for subPage in page.children %}
                                    <li><a href="{{ path('cms_view', {data: subPage.url}) }}">{{ subPage.menuName }}</a></li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
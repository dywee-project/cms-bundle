{% block collection_widget %}
    {% spaceless %}
        {% if prototype is defined %}
            {% set attr = attr|merge({'data-prototype': block('collection_item_widget') }) %}
        {% endif %}
        {{ form_errors(form) }}
        <table {{ block('widget_container_attributes') }} class="table table-stripped">
            <thead>
            <tr>
                <td>Label</td>
                <td>Type de champ</td>
                <td>Champ requis</td>
                <td>Actions</td>
            </tr>
            </thead>
            <tbody id="formElementsContainer">
                {% for rows in form %}
                    <tr>
                        <td>{{ form_widget(rows.label, { 'attr': { 'class': 'form-control' }}) }}</td>
                        {% if rows.type.vars.value == 'select' or rows.type.vars.value == 'checkbox' or rows.type.vars.value == 'radio' %}
                            {% set class = 'form-control' %}
                        {% else %}
                            {% set class = 'hidden form-control' %}
                        {% endif %}
                        <td>{{ form_widget(rows.type, { 'attr': { 'class': 'form-control' }}) }} {{ form_widget(rows.possibleValuesText, { 'attr': { 'class': class }}) }}</td>
                        <td>{{ form_widget(rows.required) }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {{ form_rest(form) }}
    {% endspaceless %}
{% endblock collection_widget %}

{% block collection_item_widget %}
    {% spaceless %}
        <tr>
            <td>{{ form_widget(prototype.label, { 'attr': { 'class': 'form-control' }}) }}</td>
            <td>{{ form_widget(prototype.type, { 'attr': { 'class': 'form-control' }}) }} {{ form_widget(prototype.possibleValuesText, { 'attr': { 'class': 'hidden form-control' }}) }}</td>
            <td>{{ form_widget(prototype.required) }}</td>
        </tr>
    {% endspaceless %}
{% endblock collection_item_widget %}